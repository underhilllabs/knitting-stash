<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FormTop" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>
    <style name="TextArea" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">4</item>
        <item name="android:gravity">top</item>
        <item name="android:lines">4</item>
    </style>
    <style name="ListRowHeader" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18sp</item>
    </style>
    <style name="LightTheme" parent="@android:style/Theme.Light">
    </style>

    <style name="BlackTheme" parent="@android:style/Theme.Black">
    </style>    
    <style name="HomeButton">
        <item name="android:layout_width">160dip</item>
        <item name="android:layout_height">120dip</item>
		<item name="android:textSize">18sp</item>    	
    </style>
</resources>
