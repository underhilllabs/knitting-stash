<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/widget55"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<TextView  
	android:id="@+id/top_form"
	style="@style/FormTop"
    android:text="Create a new counter"
    />
<TextView  
    android:id="@+id/name_label"  
    android:layout_width="100dip" 
    android:layout_height="wrap_content" 
    android:layout_below="@+id/top_form"
    android:text="Counter Name"
    />
 
<EditText
	android:id="@+id/name_field"  
    android:layout_width="120dip" 
    android:layout_height="wrap_content" 
    android:layout_toRightOf="@+id/name_label"
    android:layout_alignTop="@+id/name_label"
    />
<TextView  
	android:id="@+id/notes_label"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Notes:"
    android:layout_below="@+id/name_field"
    
    />
<EditText
	android:id="@+id/notes_field"  
    android:layout_below="@+id/notes_label"
    style="@style/TextArea"
    />
<Button  
	android:id="@+id/add_counter_button"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_below="@+id/notes_field"
    android:text="Create Counter"
    />
    

</RelativeLayout>
</ScrollView>